#!/bin/bash
export CARDANO_NODE_SOCKET_PATH=${CARDANO_NODE_SOCKET_PATH:-~/cardano-node/node.socket}
LAST_BLOCK=$(curl -s https://ada-atomic.atomicwallet.io/lastblock | jq .block_no)
LOCAL_NODE_BLOCK=$(cardano-cli query tip --mainnet | jq .block)
if [ "$LAST_BLOCK" -eq "$LOCAL_NODE_BLOCK" ]
then
  echo "cardano-node is synced!"
else
  echo "cardano-node is not sycned yet!" 
fi
cardano-cli query tip --mainnet